extends layout

block content
    header.w3-container.w3-red
        h1 Confirmar realização de tarefa
    .w3.container
        form.w3-container(method="POST")
            fieldset.w3-light-grey
                legend Realizar Tarefa
                label ID
                input.w3-input.w3-round.w3-grey(type="text" name="id" value=task.id readonly)
                label Quem
                input.w3-input.w3-round.w3-grey(type="text" name="id" value=task.who readonly)
                label O quê
                input.w3-input.w3-round.w3-grey(type="text" name="what" value=task.what readonly)
            br
            button.w3-btn.w3-round-xlarge.w3-red(type="submit") Confirmar
            a.w3-btn.w3-round-xlarge.w3-red(href="/") Voltar