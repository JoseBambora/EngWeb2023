extends layout

block content
    header.w3-container.w3-red
        h1 Editar Tarefa
    .w3.container
        form.w3-container(method="POST")
            fieldset.w3-light-grey
                legend Editar Tarefa
                label ID
                input.w3-input.w3-round.w3-grey(type="text" name="id" value=task.id readonly)
                label Quem
                select.w3-select.w3-round.w3-grey(name="who")
                    each user in listUser
                        if (user.id != task.who)
                            option(value=user.id)=user.nome
                        else
                            option(value=user.id selected)=user.nome
                label O quÃª
                input.w3-input.w3-round.w3-grey(type="text" name="what" value=task.what)
            br
            button.w3-btn.w3-round-xlarge.w3-red(type="submit") Edit Task
            a.w3-btn.w3-round-xlarge.w3-red(href="/") Voltar