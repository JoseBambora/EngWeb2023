extends layout

block content
    header.w3-container.w3-red
        h1 Gestor de tarefas
    .w3-container
        .w3-cell-row
            .w3-cell(style="width:60%")
                form.w3-container(method="POST")
                    fieldset.w3-light-grey
                        legend Form Tarefas
                        label ID
                        input.w3-input.w3-round.w3-grey(type="text" name="id")
                        label Quem
                        select.w3-select.w3-round.w3-grey(name="who")
                            each user in listUser
                                option(value=user.id)=user.nome
                        label O quÃª
                        input.w3-input.w3-round.w3-grey(type="text" name="what")
                    br
                    button.w3-btn.w3-round-xlarge.w3-red(type="submit") Register Task
            .w3-cell(style="width:40%")
                include formUsers.pug
        br
        .w3-cell-row
            .w3-cell(style="width:45%")
                table.w3-table.w3-striped.w3-bordered.w3-centered
                    tr.w3-red
                        td ID
                        td Who
                        td What
                        td
                    each elem in todo
                        tr
                            td=elem.id
                            td=dictnames[elem.who]
                            td=elem.what
                            td
                                a.w3-btn.w3-round-xlarge.w3-black.w3-padding-small(href=`/task/done/${elem.id}`)
                                    b Done 
                                a.w3-btn.w3-round-xlarge.w3-black.w3-padding-small(href=`/task/edit/${elem.id}`)
                                    b Edit
            .w3-cell(style="width:10%")
            .w3-cell(style="width:45%")
                table.w3-table.w3-striped.w3-bordered.w3-centered
                    tr.w3-red
                        td ID
                        td Who
                        td What
                    each elem in done
                        tr
                            td=elem.id
                            td=dictnames[elem.who]
                            td=elem.what
